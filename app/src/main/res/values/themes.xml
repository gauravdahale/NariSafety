<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NariSafety" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#8529A7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/color_black</item>
        <item name="colorSurface">#E6E1E8</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginCardShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>

    </style>
    <style name="button_platform_appearance">
        <item name="android:textAlignment">center</item>
        <item name="neuLightShadowColor">@color/color_blue</item>
        <item name="neuDarkShadowColor">@color/purple_400</item>
        <item name="neuFillStartColor">@color/colorPrimaryDark</item>
        <item name="neuFillEndColor">@color/colorPrimaryDark</item>
<!--        <item name="neuFillPressedStartColor">...</item>-->
<!--        <item name="neuFillPressedEndColor">...</item>-->
        <item name="neuBorderStartColor">@color/design_default_color_primary</item>
        <item name="neuBorderEndColor">@color/design_default_color_secondary</item>
<!--        <item name="neuBorderPressedStartColor">...</item>-->
<!--        <item name="neuBorderPressedEndColor">...</item>-->
    </style>



    <style name="elevated_appearance">

        <item name="neuButtonBorder1StartColor">@color/design_default_color_primary</item>
        <item name="neuButtonBorder1EndColor">@color/design_default_color_secondary</item>
        <item name="neuButtonBorder2StartColor">@color/design_default_color_secondary</item>
        <item name="neuButtonBorder2EndColor">@color/design_default_color_primary</item>
        <item name="neuButtonPressedDarkShadowColor">@color/design_default_color_error</item>
    </style>
</resources>